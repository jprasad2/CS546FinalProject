{{#if User}}
    <div class="profile">
        <img src="../public/img/{{User.profilePicture}}" alt="profile image" width="100" height="100"><br>
        Name: {{User.firstName}} {{User.lastName}} <br>
        Username: {{User.Username}} <br>
        Email: {{User.Email}} <br>
        Bio: {{User.Bio}} <br>
        Age: {{User.Age}}
    </div>
{{/if}}

{{#each Portfolio}}
    <div class="portfolio">
        <div class="editPortfolio">
        <h1>{{Subject}}</h1> <br>
        
       <a href="/user/editportfolio/{{_id}}" class="edit-portfolio-button">
                <button type="button">Edit Portfolio</button>
        </a>
        

        <p>
            Create Date: {{createDate}} <br>
            Last Update: {{lastUpdate}} <br>
        </p>
        </div>
    </div>
{{/each}}

